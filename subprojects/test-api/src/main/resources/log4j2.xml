<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="warn">
    <Appenders>
        <Console name="SysOut" target="SYSTEM_OUT">
            <PatternLayout pattern="[%d{HH:mm:ss}] [%t/%level] [%logger]: %msg%n"/>
        </Console>
    </Appenders>
    <Loggers>
        <!-- Shut jgit up, I could not care less about its internal debug logging. -->
        <Logger name="org.eclipse.jgit" level="INFO"/>
        <Root level="all">
            <AppenderRef ref="SysOut" level="${sys:console.level:-debug}"/>
        </Root>
    </Loggers>
</Configuration>
